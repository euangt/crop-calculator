<h1>Apple Tree Farm</h1>
<hr>
<% @crops.each do |crop| %>
  <h3>Crop: <%= crop.crop_name %></h3>
  <% @chemical = Chemical.find(crop.chemical_id) %>
  <h3><%= @chemical.name %></h3>
  <% @fields.where(crop_id: crop.id).each do |field| %>
    <% @hectarage += field.hectarage %>
  <% end %>
  <p>Total Hectarage: <%= @hectarage %></p>
  <p>Next Order:</p>
  <ul>
    <li><p>Order Date:</p></li>
    <li><p>Order Price: Â£<%= @hectarage * @chemical.price_per_litre %></p></li>
  </ul>
<hr>
<% end %>